<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_teresa_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_purple"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="none|vertical"
        tools:context="com.example.vasu.sfs_v_17_18.teresa_c">

        <Button
            android:id="@+id/MC1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="123dp"
            android:background="@android:color/holo_blue_dark"
            android:text=" Adiya Chopra "
            android:textSize="20sp" />

        <Button
            android:id="@+id/MC4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/MC3"
            android:layout_toEndOf="@+id/MC1"
            android:background="@android:color/holo_blue_dark"
            android:text="Chaiytanya Gupta"
            android:textSize="20sp" />

        <Button
            android:id="@+id/MC2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/MC4"
            android:layout_alignTop="@+id/MC1"
            android:layout_marginStart="19dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Akriti Bhan"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/MC3"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="134dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/MC1"
            android:layout_marginBottom="152dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Samarth Shah"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_marginEnd="36dp"
            app:srcCompat="@drawable/nmc2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/MC3"
            android:layout_marginTop="182dp"
            app:srcCompat="@drawable/nmc3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignTop="@+id/imageView3"
            app:srcCompat="@drawable/nmc4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/MC5"
            android:layout_marginStart="41dp"
            android:layout_marginTop="-28dp"
            app:srcCompat="@drawable/nmc5" />

        <Button
            android:id="@+id/MC5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="41dp"
            android:layout_toEndOf="@+id/MC1"
            android:background="@android:color/holo_blue_dark"
            android:text="Yashika  Shishodia"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/MC3"
            android:layout_alignTop="@+id/imageView2"
            app:srcCompat="@drawable/nmc1" />

    </RelativeLayout>
</ScrollView>
