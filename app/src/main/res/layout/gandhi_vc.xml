<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_gandhi_vc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.vasug.sfs_voting_18_19.gandhi_vc"
        android:background="@android:color/holo_purple">

        <Button
            android:id="@+id/GVC1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/GVC2"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/GVC2"
            android:layout_marginTop="18dp"
            android:text=" Ruchi Bansal"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ngvc1"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:id="@+id/imageView33"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ngvc2"
            android:id="@+id/imageView34"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/imageView33"
            android:layout_alignLeft="@+id/imageView33"
            android:layout_alignStart="@+id/imageView33" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ngvc3"
            android:id="@+id/imageView35"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/imageView34"
            android:layout_alignLeft="@+id/imageView34"
            android:layout_alignStart="@+id/imageView34" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ngvc4"
            android:id="@+id/imageView37"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/imageView35"
            android:layout_alignStart="@+id/imageView35" />

        <Button
            android:id="@+id/GVC4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="41dp"
            android:layout_marginEnd="28dp"
            android:text="Daivik Keswani "
            android:textSize="18sp" />

        <Button
            android:id="@+id/GVC3"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/GVC4"
            android:layout_alignStart="@+id/GVC4"
            android:layout_alignTop="@+id/imageView35"
            android:layout_marginTop="25dp"
            android:text="Ananya Kher"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/GVC2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/GVC3"
            android:layout_alignStart="@+id/GVC3"
            android:layout_alignTop="@+id/imageView34"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="21dp"
            android:text="Sucheta Shandilya"
            android:textAllCaps="false"
            android:textSize="20sp" />
    </RelativeLayout>
</ScrollView>