<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_tagore_vc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.vasu.sfs_v_17_18.tagore_vc"
        android:background="@android:color/holo_purple">

        <Button
            android:id="@+id/TVC2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/TVC1"
            android:layout_marginTop="160dp"
            android:background="@android:color/holo_orange_light"
            android:text=" Prakriti Suman"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/TVC1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="61dp"
            android:layout_marginTop="44dp"
            android:background="@android:color/holo_orange_light"
            android:text=" Tanisha Goel "
            android:textAllCaps="false"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ntvc1"
            android:id="@+id/imageView54"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ntvc2"
            android:id="@+id/imageView55"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/imageView54"
            android:layout_alignLeft="@+id/imageView54"
            android:layout_alignStart="@+id/imageView54" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ntvc3"
            android:id="@+id/imageView56"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/imageView55"
            android:layout_alignLeft="@+id/imageView55"
            android:layout_alignStart="@+id/imageView55" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ntvc4"
            android:id="@+id/imageView57"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/imageView56"
            android:layout_alignStart="@+id/imageView56"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/TVC3"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TVC2"
            android:layout_alignStart="@+id/TVC2"
            android:layout_alignTop="@+id/imageView56"
            android:layout_marginTop="23dp"
            android:background="@android:color/holo_orange_light"
            android:text=" Gaurav Dabas "
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/TVC4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView57"
            android:layout_alignLeft="@+id/TVC3"
            android:layout_alignStart="@+id/TVC3"
            android:layout_marginBottom="23dp"
            android:background="@android:color/holo_orange_light"
            android:text="  Vidhi Sinha "
            android:textAllCaps="false"
            android:textSize="20sp" />


    </RelativeLayout>
</ScrollView>
